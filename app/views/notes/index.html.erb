<div class="container">
  <br>
  <div class="row">
    <% @notes.each do |note| %>
      <div class="col-md-3">
        <div class="card mb-3 shadow">
          <div class="card-header">
            <h5 class="text-center"><%= note.title %></h5>
          </div>
          <div class="card-body">
            <p class="card-text"><%= note.body %></p>
            <p class="card-priority">priority: <%= note.priority.status %></p>
            <footer class="blockquote-footer">
              <%= note.user.email %>
              <cite title="TÃ­tulo da fonte">
              </br>em <%= note.created_at.strftime('%d/%m/%Y') %>
              </cite>
            </footer>
            <hr>
            <div class="row">
              <div class="col-6">
                <a class="btn btn-info" href="/notes/<%= note.id %>/edit" style="width: 100%; padding: 0;">edit</a>
              </div>
              <div class="col-6">
                <%= button_to "delete", { action: 'destroy', id: note.id, controller: :notes }, method: :delete, class: 'btn btn-danger', style: 'width: 100%; padding: 0;' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
