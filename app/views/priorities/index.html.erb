<div class="container">
  <div class="row">
    <table class="table table-striped table-dark mx-auto text-center" style="width: 50%;">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">STATUS</th>
          <th scope="col">ACTION</th>
        </tr>
      </thead>
      <tbody>
        <% @priorities.each do |priority| %>
          <tr>
            <th scope="row"><%= priority.id %></th>
            <td><%= priority.status %></td>
            <td>
              <div class="row">
                <div class="col-6">
                  <a class="btn btn-info" href="/priorities/<%= priority.id %>/edit" style="width: 100%; padding: 0;">edit</a>
                </div>
                <div class="col-6">
                  <%= button_to "delete", { action: 'destroy', id: priority.id, controller: :priorities }, method: :delete, class: 'btn btn-danger', style: 'width: 100%; padding: 0;' %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
